#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/pointing.h>

/ {
    /* behaviors を追加 */
    behaviors {
        &mt {
            flavor = "balanced";
            tapping-term-ms = <200>;
        };
        &lt {
            flavor = "balanced";
            tapping-term-ms = <200>;
        };
    };
    combos {
        compatible = "zmk,combos";

        bt_clear {
            bindings = <&bt BT_CLR>;
            key-positions = <28 29>;
            layers = <2>;
